{
  "name": "@k14v/react-i18njs",
  "version": "0.1.0",
  "description": "React utilities for internationalization",
  "main": "index.js",
  "scripts": {
    "test": "jest --watch",
    "test:nowatch": "jest",
    "postbuild": "./scripts/nlink lib",
    "build": "babel src --out-dir lib --ignore **/*.test.js",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/k14v/react-i18njs.git"
  },
  "homepage": "https://github.com/k14v/react-i18njs#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm test"
    }
  },
  "keywords": [
    "react",
    "i18n",
    "l10n",
    "context",
    "hooks"
  ],
  "author": {
    "name": "k14v",
    "url": "https://github.com/k14v"
  },
  "contributors": [
    {
      "name": "Rubeniskov",
      "email": "me@rubeniskov.com",
      "url": "https://rubeniskov.com"
    },
    {
      "name": "Kelvur",
      "url": "https://github.com/Kelvur"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "hoist-non-react-statics": "^3.3.0",
    "memoize-one": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@k14v/i18njs": "0.0.8",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^10.0.1",
    "@testing-library/user-event": "^10.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.2.3",
    "babel-loader": "8.0.6",
    "babel-plugin-named-asset-import": "^0.3.6",
    "babel-preset-react-app": "^9.1.1",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^25.2.3",
    "jest-environment-jsdom-fourteen": "^1.0.1",
    "jest-resolve": "^25.2.3",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "peerDependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.8.4",
    "react-dom": "^16.8.4"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx}",
      "<rootDir>/src/**/*.test.{js,jsx}"
    ],
    "testEnvironment": "jest-environment-jsdom-fourteen",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "modulePaths": [
      "<rootDir>/src"
    ]
  }
}
